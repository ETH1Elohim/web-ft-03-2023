<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Details</title>
    <script src="https://cdn.tailwindcss.com"></script>
    
</head>
<body>
    <div class="h-screen bg-orange-100 overflow-auto">

        <!-- Navbar -->
        <nav class="flex items-center justify-between flex-wrap bg-orange-300 p-6 mb-3">
            <div class="flex items-center flex-shrink-0 mr-6">
                <span class="font-semibold text-xl tracking-tight">Blog Functionality</span>
            </div>
            <div class="w-full block flex-grow lg:flex lg:items-center lg:w-auto">
                <div class="text-sm lg:flex-grow">
                    <a href="/" class="block mt-4 lg:inline-block lg:mt-0 hover:text-white mr-4">
                        Home
                    </a>
                    <a href="/admin" class="block mt-4 lg:inline-block lg:mt-0 hover:text-white mr-4">
                        Admin
                    </a>
                </div>
            </div>
        </nav>

         <!-- Content -->
         <div class="flex flex-col justify-center items-center">
                
            <div class="title text-2xl font-bold mb-7">
                <%= blog.title %> 
            </div>
            <div class="description text-center w-1/2 mb-7"><%= blog.content %> </div> 

            <div class="w-1/2 mt-7">
                <div class="text-2xl font-bold mb-4">Comments</div>
                <% comments.forEach(comment => { 
                    if(comment.isApproved == true){ %>
                    <div class="border p-4 mb-4">
                        <div class="font-bold"><%= comment.username %></div>
                        <p><%= comment.content %></p>
                    </div>
                <% }
                 }) %>
            </div>

            <!-- Comment Form -->
            <div class="w-1/3 mt-7">
                <form action="/comments" method="POST">
                    <input type="hidden" name="blogID" value="<%= blog.id %>">
                    <div class="mb-7">
                        <label for="username" class="form-label">Username:</label>
                        <input type="text" class="form-control border" id="username" name="username">
                    </div>
                    <div class="mb-7">
                        <label for="comment" class="form-label">Comment:</label>
                        <textarea class="form-control border h-24 w-full" id="comment" name="comment"></textarea>
                    </div>
                    <button type="submit" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">Submit Comment</button>
                </form>
            </div>
            

        </div>
    
</body>
</html>